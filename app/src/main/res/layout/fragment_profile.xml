<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:theme="@style/Theme.CiudadanoDigital"
    tools:context=".ui.fragment.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:paddingHorizontal="30dp"
        android:paddingTop="60dp">

        <ImageButton
            android:id="@+id/profileFragment_returnImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="-5dp"
            android:background="@null"
            android:contentDescription="@string/open_chats"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/profileFragment_userInitial"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_send_message"
            android:elevation="10dp"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_titleProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="S" />

        <TextView
            android:id="@+id/profileFragment_titleProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/urbanist"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_emailTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_userInitial"
            tools:text="Stiv Guerra" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_emailTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autofillHints="emailAddress"
            android:labelFor="@id/profileFragment_emailEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_nameTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_titleProfile"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileFragment_emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="ejemplo@uvg.edu.gt" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_nameTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/two_column_gap"
            android:autofillHints="name"
            android:labelFor="@id/profileFragment_nameEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_birthdateTextInput"
            app:layout_constraintEnd_toStartOf="@id/profileFragment_lastnameTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_emailTextInput"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileFragment_nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="Juan" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_lastnameTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/two_column_gap"
            android:autofillHints="lastname"
            android:labelFor="@id/profileFragment_lastnameEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/profileFragment_nameTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileFragment_nameTextInput"
            app:layout_constraintTop_toTopOf="@id/profileFragment_nameTextInput"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileFragment_lastnameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="PÃ©rez" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_birthdateTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints="birthdate"
            android:labelFor="@id/profileFragment_birthdateEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:endIconDrawable="@drawable/date"
            app:endIconMode="custom"
            app:endIconTint="@color/placeholder"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_phonecodeTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_nameTextInput"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileFragment_birthdateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:enabled="false"
                android:focusable="true"
                android:hint="@string/birthdate"
                android:inputType="none"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="10/01/1998" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_phonecodeTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/two_column_gap"
            android:autofillHints="phonecode"
            android:hint="@string/phonecode"
            android:labelFor="@id/profileFragment_phonecodeEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:endIconMinSize="5dp"
            app:endIconMode="dropdown_menu"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/profileFragment_profileButton"
            app:layout_constraintEnd_toStartOf="@id/profileFragment_phoneTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_birthdateTextInput"
            app:layout_constraintWidth_percent="0.4"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/profileFragment_phonecodeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:ellipsize="end"
                android:enabled="false"
                android:focusable="false"
                android:paddingStart="17dp"
                android:paddingTop="25dp"
                android:paddingEnd="17dp"
                android:paddingBottom="9dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="+502 ð¬ð¹" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/profileFragment_phoneTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/two_column_gap"
            android:autofillHints="phone"
            android:labelFor="@id/profileFragment_phoneEditText"
            android:textColorHint="@color/placeholder"
            app:boxBackgroundColor="@color/input_background"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopEnd="@dimen/input_radius"
            app:boxCornerRadiusTopStart="@dimen/input_radius"
            app:boxStrokeColor="@color/placeholder"
            app:boxStrokeWidth="1.5dp"
            app:hintTextColor="@color/placeholder"
            app:layout_constraintBottom_toBottomOf="@id/profileFragment_phonecodeTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileFragment_phonecodeTextInput"
            app:layout_constraintTop_toTopOf="@id/profileFragment_phonecodeTextInput"
            app:layout_constraintWidth_percent="0.6"
            app:placeholderTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profileFragment_phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/placeholder"
                android:textSize="@dimen/normal_text"
                tools:text="25468795" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileFragment_profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/input_background"
            android:elevation="20dp"
            android:fontFamily="@font/urbanist"
            android:letterSpacing="0"
            android:paddingVertical="18dp"
            android:text="@string/edit_label"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFragment_phoneTextInput" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/profileFragment_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/help_color"
            app:layout_constraintBottom_toBottomOf="@id/profileFragment_profileButton"
            app:layout_constraintDimensionRatio="@string/square"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileFragment_profileButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>